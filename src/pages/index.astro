---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { buttonVariants } from '@/components/ui/button'
import { Card, CardHeader, CardTitle, CardContent } from '@/components/ui/card'
import { Badge } from '@/components/ui/badge'
import ExperienceProjectsTabs from '@/components/ExperienceProjectsTabs'
import GrommetIconsGithub from '~icons/grommet-icons/github'
import GrommetIconsLinkedin from '~icons/grommet-icons/linkedin'
import GrommetIconsMail from '~icons/grommet-icons/mail'

const skills = [
  'AWS',
  'GCP',
  'C',
  'C++',
  'Go',
  'Java',
  'JavaScript',
  'TypeScript',
  'Python',
  'Docker',
  'Kubernetes',
  'PostgreSQL',
  'Flutter',
  'Vue.js',
  'React',
  'Astro',
  'NLP',
  'Computer Vision',
  'AI/ML',
]

const experiences = [
  {
    title: 'Solutions Architect',
    company: 'Amazon Web Services LLC.',
    date: 'Jul 2022 – Current',
    description: 'Developed MLOps proof-of-concept solutions utilizing AWS Sagemaker for scalable machine learning workflows. Engineered secure multimodal data pipelines supporting near real-time inference for enterprise applications. Designed and deployed biometric voice authentication systems used by financial institutions and telecommunications. Created generative AI-driven applications for automating financial reporting and enhancing internal documentation. Collaborated with Meta on the WebXR Hackathon, achieving recognition at Workday DevCon 2023.',
  },
  {
    title: 'Software Developer Intern',
    company: 'University of California - Santa Cruz, Genomics Institute',
    date: 'Jul 2021 – June 2022',
    description:
      'Architected scalable cloud infrastructure, enhancing computational capabilities for genomic research. Managed migration and optimization of datasets from Google BigQuery to AWS Elasticsearch, significantly improving data accessibility and research capabilities.',
  },
  {
    title: 'Research Intern',
    company: 'Johns Hopkins - Applied Physics Laboratory',
    date: 'June 2021 – June 2022',
    description: 'Developed SDK modules and user interfaces for metrics querying and simulation environments targeting Brain-Computer Interfaces (BCIs). Improved user experience by enhancing software interaction capabilities within neuroscience simulation frameworks. Obtained civilian security clearance to support sensitive research projects.',
  },
]

const projects = [
  {
    title: 'Second Brain Personal Assistant',
    description:
      'Built a containerized, self-hosted server infrastructure capable of capturing, retrieving, and storing knowledge in real-time. Integrated GPT-4o to augment and dynamically organize data from web browsing sessions and received content. Features a responsive UI for seamless interaction with your knowledge base.',
    link: '/blog/second-brain-assistant',
  },
  {
    title: 'Video Hosting & AV1 Transcoding Pipeline',
    description:
      'Constructed an automated AWS-based pipeline for efficient video ingestion, transcoding to AV1 format, and content delivery. Created an intuitive, web-based interface enabling seamless user interaction and video streaming with adaptive bitrate capabilities.',
    link: '/blog',
  },
  {
    title: 'Algorithmic Trading Evaluation Platform',
    description: 'Designed a scalable system for evaluating and optimizing stock trading algorithms. Leveraged LLMs to write financial models for backtesting and identify optimal trading strategies in a genetic algorithm format.',
    link: '/blog',
  },
  {
    title: 'OS-Agnostic Audio Capture & Conference AI Assistant',
    description: 'Developed a platform-independent audio capturing solution for real-time transcription and diarization across various conferencing applications. Integrated machine learning pipelines to enable live speaker diarization and accurate transcription.',
    link: '/blog',
  },
]
---

<BaseLayout
  title="Baladithya Balamurugan - Portfolio"
  description="Baladithya Balamurugan's Personal Website"
>
  <section class="container mx-auto max-w-4xl px-4 py-12">
    <div class="mb-12 text-center">
      <h1
        class="gradient-text mb-4 p-1 text-4xl font-extrabold leading-tight tracking-tighter md:text-5xl"
      >
        Baladithya Balamurugan
      </h1>
      <p class="mb-6 text-xl text-muted-foreground">
        Solutions Architect | AWS Certified | MSCS | ML Enthusiast<br
        />Serverless | Distributed Computing
      </p>
      <div class="flex justify-center gap-4">
        <a
          href="mailto:bbaladithya@gmail.com"
          class={buttonVariants({ variant: 'outline' })}
        >
          <GrommetIconsMail class="mr-2 h-4 w-4" /> Email
        </a>
        <a
          href="https://linkedin.com/in/baladithyabalamurugan"
          target="_blank"
          rel="noreferrer"
          class={buttonVariants({ variant: 'outline' })}
        >
          <GrommetIconsLinkedin class="mr-2 h-4 w-4" /> LinkedIn
        </a>
        <a
          href="https://github.com/baladithyab"
          target="_blank"
          rel="noreferrer"
          class={buttonVariants({ variant: 'outline' })}
        >
          <GrommetIconsGithub class="mr-2 h-4 w-4" /> GitHub
        </a>
      </div>
    </div>

    <Card className="hover-card mb-8">
      <CardHeader>
        <CardTitle>About Me</CardTitle>
      </CardHeader>
      <CardContent>
        <p class="mb-4">
          Solutions Architect at AWS with expertise in machine learning infrastructure, cloud architecture, and software development. I specialize in designing scalable MLOps solutions and secure multimodal data pipelines for enterprise applications.
        </p>
        <p>
          My recent work includes developing biometric voice authentication systems, creating generative AI applications for financial reporting, and collaborating with Meta on WebXR technologies. I'm passionate about leveraging AI to solve complex problems and build innovative solutions.
        </p>
      </CardContent>
    </Card>

    <Card className="hover-card mb-8">
      <CardHeader>
        <CardTitle>Skills</CardTitle>
      </CardHeader>
      <CardContent>
        <div class="flex flex-wrap gap-2">
          {
            skills.map((skill) => (
              <Badge variant="secondary" className="skill-badge">
                {skill}
              </Badge>
            ))
          }
        </div>
      </CardContent>
    </Card>

    <ExperienceProjectsTabs
      client:load
      experiences={experiences}
      projects={projects}
    />

    <Card className="hover-card">
      <CardHeader>
        <CardTitle>Education</CardTitle>
      </CardHeader>
      <CardContent>
        <div class="mb-4">
          <h3 class="text-lg font-semibold">MS in Computer Science</h3>
          <p class="text-sm text-muted-foreground">
            University of Southern California | Sept 2022 – May 2024
          </p>
        </div>
        <div>
          <h3 class="text-lg font-semibold">BS in Computer Science</h3>
          <p class="text-sm text-muted-foreground">
            University of California, Santa Cruz | Oct 2019 – Mar 2022
          </p>
        </div>
      </CardContent>
    </Card>
  </section>
</BaseLayout>
